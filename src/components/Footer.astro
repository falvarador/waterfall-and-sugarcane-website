---
import IconRenderer, { Icon } from "../utilities/IconRenderer.astro";
---

<footer class="bg-gray-100 border-t">
    <div class="container mx-auto px-6 py-8">
        <div
            class="flex flex-col md:flex-row justify-between items-center space-y-4 md:space-y-0"
        >
            <p class="text-sm text-gray-600">
                &copy; 2024 Paraíso de la Caña. Todos los derechos reservados.
            </p>

            <div class="flex items-center space-x-4">
                <a
                    href="#"
                    aria-label="Facebook"
                    class="text-gray-500 hover:text-brand-green"
                    ><IconRenderer icon={Icon.Facebook} class="w-5 h-5" /></a
                >
                <a
                    href="#"
                    aria-label="Instagram"
                    class="text-gray-500 hover:text-brand-green"
                    ><IconRenderer icon={Icon.Instagram} class="w-5 h-5" /></a
                >
                <a
                    href="#"
                    aria-label="TikTok"
                    class="text-gray-500 hover:text-brand-green"
                    ><IconRenderer icon={Icon.Tiktok} class="w-5 h-5" /></a
                >
            </div>

            <div class="flex items-center space-x-6 text-sm">
                <a href="#" class="text-gray-600 hover:text-brand-green"
                    >Política de Privacidad</a
                >
                <span class="text-gray-400">|</span>
                <a href="#" class="text-gray-600 hover:text-brand-green"
                    >Términos de Servicio</a
                >
            </div>
        </div>
    </div>
</footer>
