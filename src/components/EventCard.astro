---
import IconRenderer, { Icon } from '../utilities/IconRenderer.astro';

interface Props {
    image: string;
    date: string;
    title: string;
    description: string;
    buttonText: string;
    buttonStyle: "primary" | "secondary";
}

const { image, date, title, description, buttonText, buttonStyle } =
    Astro.props;

const primaryButtonClasses =
    "bg-brand-green hover:bg-brand-green-dark text-white font-bold py-3 px-8 rounded-lg transition-transform transform hover:scale-105 duration-300";
const secondaryButtonClasses =
    "bg-white border-2 border-brand-green text-brand-green hover:bg-green-50 font-bold py-3 px-8 rounded-lg transition-colors duration-300";

const buttonClasses =
    buttonStyle === "primary" ? primaryButtonClasses : secondaryButtonClasses;
---

<div
    class="bg-white rounded-xl shadow-lg overflow-hidden flex flex-col md:flex-row"
>
    <img
        src={image}
        alt={title}
        class="w-full md:w-5/12 object-cover h-64 md:h-auto"
    />

    <div class="p-8 flex flex-col justify-between">
        <div>
            <div class="flex items-center text-gray-500 mb-3">
                <IconRenderer icon={Icon.Calendar} class="h-5 w-5 mr-2 text-brand-green" />
                <span>{date}</span>
            </div>

            <h3 class="text-3xl font-bold font-serif mb-4 text-brand-text">
                {title}
            </h3>
            <p class="text-gray-600 mb-6">{description}</p>
        </div>

        <a href="#" class={buttonClasses}>
            {buttonText}
        </a>
    </div>
</div>
