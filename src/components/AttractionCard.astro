---
export interface Props {
    image: string;
    title: string;
    description: string;
    timeline: string;
}

const { image, title, description, timeline } = Astro.props;
---

<div
    class="bg-white rounded-xl shadow-lg overflow-hidden transform hover:-translate-y-2 transition-transform duration-300"
>
    <img src={image} alt={title} class="w-full h-56 object-cover" />
    <div class="p-6">
        <div class="flex items-center mb-3">
            <slot name="icon" />
            <h3 class="text-xl font-bold font-serif ml-3 text-brand-text">
                {title}
            </h3>
        </div>
        <p class="text-gray-600 mb-4">{description}</p>
        <p class="font-semibold text-amber-600">{timeline}</p>
    </div>
</div>
